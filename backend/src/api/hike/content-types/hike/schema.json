{
  "kind": "collectionType",
  "collectionName": "hikes",
  "info": {
    "singularName": "hike",
    "pluralName": "hikes",
    "displayName": "Hike",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "description": {
      "type": "richtext",
      "minLength": 1,
      "maxLength": 500
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "ownedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "ownerOf"
    },
    "participants": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "participatingIn"
    },
    "isReported": {
      "type": "boolean",
      "default": false
    },
    "price": {
      "type": "float",
      "required": true,
      "default": 0
    },
    "date": {
      "type": "datetime",
      "required": false
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "easy",
        "medium",
        "hard",
        "none"
      ],
      "required": true,
      "default": "none"
    },
    "maxNumberOfParticipants": {
      "type": "integer",
      "min": 1
    },
    "maxNumberOfParticipantsIsChecked": {
      "type": "boolean"
    }
  }
}